<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mareu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.openclassrooms.mareu.ui.ListReuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.openclassrooms.mareu.ui.AddReuActivity"
            android:label="New reunion"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.openclassrooms.mareu.ui.DetailActivity"
            android:label="Detail view of a reunion"/>

    </application>

</manifest>